{
  "name": "select-and-run-without-debug",
  "displayName": "Select and Run Without Debug",
  "description": "Select and Run Without Debug from command palette.",
  "version": "1.2.0",
  "publisher": "quatters",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "url": "https://github.com/Quatters/select-and-run-without-debug"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Keymaps",
    "Other"
  ],
  "keywords": [
    "debug",
    "debugging",
    "command",
    "palette",
    "run",
    "start"
  ],
  "icon": "images/icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "select-and-run-without-debug.activate",
        "title": "Select and Run Without Debug",
        "icon": "$(debug-coverage)",
        "category": "Debug"
      },
      {
        "command": "select-and-run-without-debug.rerun",
        "title": "Rerun Last Without Debug",
        "icon": "$(debug-rerun)",
        "category": "Debug"
      },
      {
        "command": "select-and-run-without-debug.run",
        "title": "Run Without Debug",
        "icon": "$(debug-rerun)",
        "category": "Debug"
      }
    ],
    "configuration": [
      {
        "title": "Select and Run Without Debug",
        "properties": {
          "selectAndRunWithoutDebug.runButton": {
            "type": "boolean",
            "default": true,
            "description": "Show run button at the upper right corner.",
            "order": 0
          },
          "selectAndRunWithoutDebug.runButton.preferType": {
            "type": "string",
            "enum": [
              "runCurrent",
              "select"
            ],
            "default": "runCurrent",
            "enumDescriptions": [
              "Prefer to run currently selected launch configuration if debug session is not active. Alternatively, show select button (using \"alt\").",
              "Prefer to select launch configuration if debug session is not active. Alternatively, run currently selected launch configuration (using \"alt\")."
            ],
            "description": "Prefer to select run configuration or run current one."
          },
          "selectAndRunWithoutDebug.runButton.configProvider": {
            "type": "string",
            "enum": [
              "extension",
              "builtin"
            ],
            "default": "extension",
            "enumDescriptions": [
              "Use last launched without debug configuration (the most top one in \"Select and Run Without Debug\" quick pick).\"",
              "Use currently selected configuration in \"Run and Debug\" tab."
            ],
            "description": "Where to get last run configuration. This option exists because it's impossible to update currently selected configuration which you see in \"Run and Debug\" tab."
          }
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "select-and-run-without-debug.run",
          "when": "false"
        }
      ],
      "editor/title": [
        {
          "group": "navigation@0",
          "command": "select-and-run-without-debug.run",
          "alt": "select-and-run-without-debug.activate",
          "when": "config.selectAndRunWithoutDebug.runButton && config.selectAndRunWithoutDebug.runButton.preferType == 'runCurrent' && config.selectAndRunWithoutDebug.runButton.configProvider == 'builtin' && debuggersAvailable && !inDebugMode"
        },
        {
          "group": "navigation@0",
          "command": "select-and-run-without-debug.activate",
          "when": "config.selectAndRunWithoutDebug.runButton && config.selectAndRunWithoutDebug.runButton.preferType == 'runCurrent' && config.selectAndRunWithoutDebug.runButton.configProvider == 'builtin' && debuggersAvailable && inDebugMode"
        },
        {
          "group": "navigation@0",
          "command": "select-and-run-without-debug.activate",
          "alt": "select-and-run-without-debug.run",
          "when": "config.selectAndRunWithoutDebug.runButton && config.selectAndRunWithoutDebug.runButton.preferType == 'select' && config.selectAndRunWithoutDebug.runButton.configProvider == 'builtin' && debuggersAvailable && !inDebugMode"
        },
        {
          "group": "navigation@0",
          "command": "select-and-run-without-debug.rerun",
          "alt": "select-and-run-without-debug.activate",
          "when": "config.selectAndRunWithoutDebug.runButton && config.selectAndRunWithoutDebug.runButton.preferType == 'runCurrent' && config.selectAndRunWithoutDebug.runButton.configProvider == 'extension' && debuggersAvailable && !inDebugMode"
        },
        {
          "group": "navigation@0",
          "command": "select-and-run-without-debug.activate",
          "when": "config.selectAndRunWithoutDebug.runButton && config.selectAndRunWithoutDebug.runButton.preferType == 'runCurrent' && config.selectAndRunWithoutDebug.runButton.configProvider == 'extension' && debuggersAvailable && inDebugMode"
        },
        {
          "group": "navigation@0",
          "command": "select-and-run-without-debug.activate",
          "alt": "select-and-run-without-debug.rerun",
          "when": "config.selectAndRunWithoutDebug.runButton && config.selectAndRunWithoutDebug.runButton.preferType == 'select' && config.selectAndRunWithoutDebug.runButton.configProvider == 'extension' && debuggersAvailable && !inDebugMode"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "3.0.3",
    "typescript": "^4.9.5"
  }
}
